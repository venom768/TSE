/* TSE Lagerverwaltung von Erik Becker, Steffen Reinicke und Tom Hausbeck */

html, body { 
margin:0; padding: 0; 
}

body {
background-color: #FAFAFA;
font-family: arial, sans-serif;
}

div#wrapper {
max-width: 120em;
min-width: 36em;
margin: 0em auto;
background-color: #BDBDBD;
margin-top: 1em;
padding: 1em;
border-radius: 1em;
}

div#header {
max-width: 100%;
height: 15em;
background-color: #D8D8D8;
margin-bottom: 1em;
border-radius: 1em;

display: flex;
align-items: center;
justify-content: center;
}

div#content {
max-width: 100%;
height: auto;
background-color: #D8D8D8;
margin-bottom: 1em;
border-radius: 1em;
}

div#navigation {
width: 100%;
height: 4.3em;
background-color: #D8D8D8;
margin-bottom: 1em;
border-radius: 1em;
}

div#footer {
max-width: 100%;
height: 2em;
background-color: #D8D8D8;
border-radius: 1em;
}

.bold {
font-weight: bold;
}

h1 {
margin-left: 1%;
margin-right: 5%;
font-size: 350%;
color: #585858;

text-shadow: 0 -1px 1px #FFFFFF, 0 1px 1px #666666;
text-decoration: underline solid #11C7E3;
}

h2 {
font-size: 200%;
color: #0080FF;
}

h3 {
font-size: 150%;
}

div#header a img {
max-width: 100%;
height:auto;
margin-left: 5%;
margin-right: 1%;
}

div#navigation ul {
list-style: none;
margin: 0;
padding: 0;

display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
}

div#navigation li {
width: 10em;
list-style: none;
margin: 0.5em;
padding: 0;
font-size: 1.4em;
}

div#navigation a {
display: block;
padding: 0.4em;
text-decoration: none;
font-weight: bold;
text-align: center;
border: 1px solid black;
color: white;
background-color: #848484;
}

div#navigation li a:focus, #navigation li a:hover {
color: black;
background-color: #11C7E3;
}

form#login {
padding-top: 12em;
padding-bottom: 12em;
display: flex;
justify-content: center;
align-items: center;
}

form#login ul {
list-style: none;
margin: 0;
padding: 0;
}

form#login ul li {
list-style: none;
margin: 0.5em;
padding: 0;
font-size: 100%;
}

form#login input {
font-size: 150%;
}

form#login ul li:last-child a {
display: block;
padding: 0.4em;
text-decoration: none;
font-weight: bold;
text-align: center;
border: 1px solid black;
color: white;
background-color: #848484;
}

form#login ul li:last-child a:focus, #login ul li:last-child a:hover {
color: black;
background-color: #11C7E3;
}

div#footer ul {
list-style: none;
margin: 0;
padding: 0;

display: flex;
flex-direction: row;
align-items: center;
justify-content: center;
}

div#footer ul li {
list-style: none;
margin: 0.5em;
padding: 0;
}

div#footer ul li a {
font-size: 100%;
color: #585858;
text-decoration: none;
}

/* Einstellungen fuer das Responsive Webdesign */

@media screen and (max-width: 73em){

h1 {
font-size: 250%;
text-shadow: 0 -0.5px 0.5px #FFFFFF, 0 0.5px 0.5px #666666;
}

div#header a img {
max-width: 80%;

}

}